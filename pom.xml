    </scm>
    <developers>
        <developer>
            <id>Keith</id>
            <name>Keith Collison</name>
            <email>keithc238@gmail.com</email>
        </developer>
    </developers>

    <repositories>
        <repository>
            <id>repo.jenkins-ci.org</id>
            <url>http://repo.jenkins-ci.org/public/</url>
